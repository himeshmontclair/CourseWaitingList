<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Edit/Delete Student Details"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/cancel_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_cancel"
            android:gravity="center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="8dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Student Name"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="1.2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text=":"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="0.2"
            />

        <EditText
            android:id="@+id/name_editext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fab_margin"
            android:layout_weight="1.55"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Required Course"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="1.2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text=":"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="0.2"
            />

<!--        <EditText-->
<!--            android:id="@+id/mobile_number"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="left"-->
<!--            android:layout_weight="1.55"-->
<!--            android:imeOptions="actionDone"-->
<!--            android:singleLine="true"-->
<!--            android:textColor="#000000"-->
<!--            android:textColorHint="@color/color_black"-->
<!--            android:textSize="@dimen/text_size" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_card"
            android:padding="5dp"
            android:layout_weight="1.55">

            <Spinner
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:weightSum="3"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="Priority"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="1.2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text=":"
            android:padding="3dp"
            android:textColor="@color/color_black"
            android:layout_weight="0.2"
            />

<!--        <EditText-->
<!--            android:id="@+id/mail"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1.55"-->
<!--            android:gravity="left"-->
<!--            android:imeOptions="actionDone"-->
<!--            android:singleLine="true"-->
<!--            android:textColor="#000000"-->
<!--            android:textColorHint="@color/color_black"-->
<!--            android:textSize="@dimen/text_size" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_card"
            android:padding="5dp"
            android:layout_weight="1.55">

            <Spinner
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:id="@+id/update_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.7"
            android:layout_margin="20dp"
            android:text="Update"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_white"
            android:background="@drawable/round_btn_card_blue"
            />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.7"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Delete"
            android:textColor="@color/color_white"
            android:background="@drawable/round_btn_card_blue"
            />

    </LinearLayout>

</LinearLayout>
